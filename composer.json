{
  "name": "msdevbytes/filament-currency-switcher",
  "description": "A Filament v3 plugin to add a currency switcher with automatic conversion",
  "type": "library",
  "version": "1.0.0",
  "license": "MIT",
  "authors": [
    {
      "name": "Muhammad Shahbaz",
      "email": "shahbaz.khan.wip@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "filament/filament": "^3.0",
    "spatie/laravel-settings": "^3.4",
    "code-distortion/currency": "^0.5.6"
  },
  "autoload": {
    "psr-4": {
      "Msdevbytes\\CurrencySwitcher\\": "src/"
    },
    "files": [
      "helpers.php"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "Msdevbytes\\CurrencySwitcher\\CurrencyServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
